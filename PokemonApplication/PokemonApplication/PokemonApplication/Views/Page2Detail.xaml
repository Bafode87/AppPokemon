<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokemonApplication.Views.Page2Detail">
    <ContentPage.Content>
        <StackLayout Padding="15">
            <ScrollView>
            <StackLayout Padding="15" BackgroundColor="#F0737A" >
                <Frame BorderColor="Black">
                    <Image x:Name="MonImage" HeightRequest="200" WidthRequest="300"/>
                </Frame>
                <Frame BorderColor="White" CornerRadius="10" BackgroundColor="#F0737A">
                    <Label x:Name="MonNom" FontFamily="Lobster-Regular" FontSize="Title" HorizontalTextAlignment="Center" TextColor="White" />
                </Frame>
                <Frame BorderColor="White" CornerRadius="10" BackgroundColor="#F0737A">
                    <Label x:Name="MonId" FontFamily="Lobster-Regular" FontSize="Title" HorizontalTextAlignment="Center" TextColor="White" />
                </Frame>


                <Frame BorderColor="White" CornerRadius="10" BackgroundColor="#F0737A">
                    <Label x:Name="MonType" FontFamily="Lobster-Regular" FontSize="Title" HorizontalTextAlignment="Center" TextColor="White"/>
                    </Frame>
                
                <Label FontFamily="Lobster-Regular" FontSize="Title" HorizontalTextAlignment="Center" TextColor="White">Stats</Label>
                <Label x:Name="MaStat1" FontSize="Large" TextTransform="Uppercase" TextColor="White"/>
                <ProgressBar x:Name="ProgressBar1" ProgressColor="White" WidthRequest="100" />
                <Label x:Name="MaStat2" FontSize="Large" TextTransform="Uppercase" TextColor="White"/>
                <ProgressBar x:Name="ProgressBar2" ProgressColor="White"  />
                <Label x:Name="MaStat3" FontSize="Large" TextTransform="Uppercase" TextColor="White"/>
                <ProgressBar x:Name="ProgressBar3" ProgressColor="White"  />
                <Label x:Name="MaStat4" FontSize="Large" TextTransform="Uppercase" TextColor="White"/>
                <ProgressBar x:Name="ProgressBar4" ProgressColor="White"  />
                <Label x:Name="MaStat5" FontSize="Large" TextTransform="Uppercase" TextColor="White"/>
                <ProgressBar x:Name="ProgressBar5" ProgressColor="White"  />
                <Label x:Name="MaStat6" FontSize="Large" TextTransform="Uppercase" TextColor="White"/>
                <ProgressBar x:Name="ProgressBar6" ProgressColor="White"  />



            </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>