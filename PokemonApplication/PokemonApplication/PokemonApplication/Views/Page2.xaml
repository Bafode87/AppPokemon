<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokemonApplication.Pages.Page2">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="ListPokemons">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                               
                                <Grid.ColumnDefinitions>
                                 
                                    <ColumnDefinition  Width="100"/>
                                    <ColumnDefinition  Width="100"/>
                                    <ColumnDefinition  Width="100"/>
                                    <ColumnDefinition  Width="100"/>
                                   
      
                                </Grid.ColumnDefinitions>
                                
                                <Image Grid.RowSpan="2" Grid.Column="0" Source="{Binding ImageSource}"/>
                                <Label Grid.Row="0" Grid.Column="1" Text="{Binding Name}"/>
                                <Label Grid.Row="0" Grid.Column="2" Text="{Binding Level}"/>
                                <Label Grid.Row="0" Grid.Column="3" Text="{Binding Type}"/>
                                
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>